{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Experiment Result",
  "description": "Schema for experiment result data",
  "type": "object",
  "required": [
    "experiment_id",
    "run_id",
    "timestamp",
    "metrics",
    "parameters",
    "storage_source",
    "cache_hit"
  ],
  "properties": {
    "experiment_id": {
      "type": "string",
      "description": "Unique identifier for the experiment"
    },
    "run_id": {
      "type": "string",
      "description": "Unique identifier for the specific run"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the run was completed"
    },
    "metrics": {
      "type": "object",
      "description": "Key-value pairs of metrics collected during the experiment",
      "additionalProperties": {
        "type": ["number", "string", "boolean", "null"]
      }
    },
    "parameters": {
      "type": "object",
      "description": "Key-value pairs of parameters used in the experiment",
      "additionalProperties": {
        "type": ["number", "string", "boolean", "null"]
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the run",
      "properties": {
        "hostname": { "type": "string" },
        "cpu_count": { "type": "integer" },
        "memory_mb": { "type": "number" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "storage_source": {
      "type": "string",
      "description": "Source of the data storage (e.g., 'local', 's3', 'azure-blob')",
      "enum": ["local", "s3", "azure-blob", "gcs", "other"]
    },
    "cache_hit": {
      "type": "boolean",
      "description": "Whether the result was served from cache"
    },
    "error": {
      "type": ["string", "null"],
      "description": "Error message if the run failed"
    },
    "duration_ms": {
      "type": ["number", "null"],
      "description": "Duration of the experiment run in milliseconds"
    },
    "version": {
      "type": "string",
      "description": "Version of the schema",
      "default": "1.0.0"
    }
  },
  "additionalProperties": false
}
